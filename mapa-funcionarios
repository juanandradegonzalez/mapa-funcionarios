  <script>
    // Filtro da tabela
    document.addEventListener('DOMContentLoaded', function () {
      const municipioSelect = document.getElementById('municipio');
      const moduloSelect = document.getElementById('modulo');
      const responsavelSelect = document.getElementById('responsavel');
      const generalSearchInput = document.getElementById('generalSearch');
      const dataTable = document.getElementById('dataTable').getElementsByTagName('tbody')[0];
      const tableHeaders = document.querySelectorAll('#dataTable th');
      
      // Variáveis para controlar a ordenação
      let currentSortCol = 0; // Coluna atualmente ordenada (padrão: Município)
      let currentSortDir = 'asc'; // Direção da ordenação (padrão: ascendente)

      // Função para filtrar a tabela
      function filterTable() {
        const municipioValue = municipioSelect.value.toUpperCase();
        const moduloValue = moduloSelect.value.toUpperCase();
        const responsavelValue = responsavelSelect.value.toUpperCase();
        const rows = dataTable.getElementsByTagName('tr');

        for (let i = 0; i < rows.length; i++) {
          const columns = rows[i].getElementsByTagName('td');
          const municipio = columns[0].textContent.toUpperCase();
          const responsavel = columns[1].textContent.toUpperCase();
          const modulo = columns[2].textContent.toUpperCase();

          if ((municipioValue && municipio.indexOf(municipioValue) === -1) || 
              (moduloValue && modulo.indexOf(moduloValue) === -1) ||
              (responsavelValue && responsavel.indexOf(responsavelValue) === -1)) {
            rows[i].style.display = 'none';
          } else {
            rows[i].style.display = '';
          }
        }
      }

      // Função de pesquisa geral
      generalSearchInput.addEventListener('keyup', function() {
        const searchValue = generalSearchInput.value.toUpperCase();
        const rows = dataTable.getElementsByTagName('tr');

        for (let i = 0; i < rows.length; i++) {
          const columns = rows[i].getElementsByTagName('td');
          let rowText = '';
          for (let j = 0; j < columns.length; j++) {
            rowText += columns[j].textContent.toUpperCase() + ' ';
          }
          if (rowText.indexOf(searchValue) === -1) {
            rows[i].style.display = 'none';
          } else {
            rows[i].style.display = '';
          }
        }
      });

      // Função para ordenar as colunas
      window.sortTable = function(n) {
        // Remover classes de ordenação de todos os cabeçalhos
        tableHeaders.forEach(header => {
          header.classList.remove('asc', 'desc');
        });
        
        // Determinar a direção da ordenação
        if (currentSortCol === n) {
          // Se a mesma coluna for clicada novamente, inverter a direção
          currentSortDir = currentSortDir === 'asc' ? 'desc' : 'asc';
        } else {
          // Se uma nova coluna for clicada, definir como ascendente
          currentSortDir = 'asc';
          currentSortCol = n;
        }
        
        // Adicionar classe de ordenação ao cabeçalho atual
        tableHeaders[n].classList.add(currentSortDir);
        
        const table = document.getElementById("dataTable");
        const tbody = table.querySelector('tbody');
        const rows = Array.from(tbody.querySelectorAll('tr'));
        
        // Ordenar as linhas
        const sortedRows = rows.sort((a, b) => {
          const aValue = a.cells[n].textContent.trim().toLowerCase();
          const bValue = b.cells[n].textContent.trim().toLowerCase();
          
          if (currentSortDir === 'asc') {
            return aValue.localeCompare(bValue, 'pt-BR');
          } else {
            return bValue.localeCompare(aValue, 'pt-BR');
          }
        });
        
        // Remover todas as linhas existentes
        while (tbody.firstChild) {
          tbody.removeChild(tbody.firstChild);
        }
        
        // Adicionar as linhas ordenadas de volta à tabela
        sortedRows.forEach(row => {
          tbody.appendChild(row);
        });
      };

      // Adicionar event listeners para os filtros
      municipioSelect.addEventListener('change', filterTable);
      moduloSelect.addEventListener('change', filterTable);
      responsavelSelect.addEventListener('change', filterTable);

      // Ordenar a tabela por Município ao carregar a página (ordem alfabética)
      sortTable(0);
    });
  </script>
</body>
</html>
